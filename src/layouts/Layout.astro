---
// https://search.google.com/test/rich-results
import '../styles/reset.css';
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
  url?: string;
}

const { title, description, image, url } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = image ? new URL(image, Astro.url).href : new URL('/cover.webp', Astro.url).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="TechHub Community & Glug MVIT" />
    <meta name="keywords" content="hackathon, hack-nocturne, techhub, glug-mvit, bengaluru, sir-mvit, coding, programming, innovation, technology, competition, zintlr, devfolio, march 2025" />
    
    <!-- Event-specific meta tags -->
    <meta name="event:name" content="Hack-Nocturne '25" />
    <meta name="event:organizer" content="TechHub Community & Glug MVIT" />
    <meta name="event:start_date" content="2025-03-28T08:00:00+05:30" />
    <meta name="event:end_date" content="2025-03-29T18:00:00+05:30" />
    <meta name="event:location" content="Sir M. Visvesvaraya Institute of Technology, Bengaluru, India" />
    <meta name="event:contact" content="contact@hack-nocturne.in" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Hack-Nocturne '25" />
    <meta property="og:locale" content="en_IN" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />
    <meta property="twitter:creator" content="@_techhub" />
    
    <!-- WhatsApp -->
    <meta property="og:image:alt" content="Hack-Nocturne '25 - Through the Night, Ideas Take Flight" />
    
    <!-- Schema.org structured data -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Event",
        "name": "Hack-Nocturne '25",
        "description": "A premier 24-hour hackathon experience brought to you by TechHub Community & Glug MVIT. Join us for innovation, creativity, and collaboration!",
        "startDate": "2025-03-28T08:00:00+05:30",
        "endDate": "2025-03-29T18:00:00+05:30",
        "eventStatus": "https://schema.org/EventScheduled",
        "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
        "location": {
          "@type": "Place",
          "name": "Sir M. Visvesvaraya Institute of Technology",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "International Airport Road, Yelahanka",
            "addressLocality": "Bengaluru",
            "addressRegion": "Karnataka",
            "postalCode": "560064",
            "addressCountry": "IN"
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": "13.1358",
            "longitude": "77.6158"
          }
        },
        "performer": {
          "@type": "Organization",
          "name": "TechHub Community & Glug MVIT"
        },
        "organizer": [
          {
            "@type": "Organization",
            "name": "TechHub Community",
            "url": "https://twitter.com/_techhub"
          },
          {
            "@type": "Organization", 
            "name": "Glug MVIT",
            "url": "https://www.instagram.com/glugmvit/"
          }
        ],
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "INR",
          "availability": "https://schema.org/InStock",
          "url": "https://hack-nocturne.devfolio.co/",
          "validFrom": "2025-03-28T00:00:00+05:30",
          "validThrough": "2025-03-30T18:00:00+05:30"
        },
        "image": "https://hack-nocturne.in/cover.webp",
        "url": "https://hack-nocturne.in"
      }
    </script>
    
    <!-- Theme color -->
    <meta name="theme-color" content="#7c3aed" />
    <meta name="msapplication-TileColor" content="#7c3aed" />
    
    <!-- prefetches and preconnects for external resources -->
    <link rel="dns-prefetch" href="//devfolio.co" />
    <link rel="preconnect" href="https://maps.googleapis.com">
    <link rel="preconnect" href="https://maps.gstatic.com" crossorigin>
  </head>
  <body class="zero-js">
    <slot />
  </body>
</html>
